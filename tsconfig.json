{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "@components": [
        "./src/presentations/components"
      ],
      "@containers": [
        "./src/presentations/containers"
      ],
      "@layouts": [
        "./src/presentations/layouts"
      ],
      "@hooks": [
        "./src/presentations/hooks"
      ],
      "@pages": [
        "./src/presentations/pages"
      ],
      "@routes": [
        "./src/presentations/routes"
      ],
      "@assets": [
        "./src/core/assets"
      ],
      "@blog": [
        "./src/domain/blog"
      ],
      "@core": [
        "./src/core"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@general-types": [
        "./src/types"
      ],
      "@domain": [
        "./src/domain"
      ],
      "@apps": [
        "./src/presentations/apps"
      ],
      "@src/*": [
        "./src/*"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
